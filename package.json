{
  "name": "movecli",
  "displayName": "Aptos Move Publisher",
  "description": "running aptos move commands with an ui",
  "publisher": "DhruvDJain",
  "icon": "aptos.png", 
  "version": "0.0.5",
  "repository": "https://github.com/dhruvja/aptos-vscode-extension",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:movecli.helloWorld",
    "onCommand:movecli.askQuestion",
    "onView:aptosmove-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aptosmove-sidebar-view",
          "title": "Aptos Move Publisher",
          "icon": "aptos.png"
        }
      ]
    },
    "views": {
      "aptosmove-sidebar-view": [
        {
          "type": "webview",
          "id": "aptosmove-sidebar",
          "name": "Aptos Move Publisher",
          "icon": "aptos.png",
          "contextualTitle": "Aptos Move Publisher"
        }
      ]
    },
    "commands": [
      {
        "command": "movecli.helloWorld",
        "category": "Aptos Move Publisher",
        "title": "Run Commands"
      },
      {
        "command": "movecli.askQuestion",
        "category": "Aptos Move Publisher",
        "title": "Ask Question"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": " webpack --watch ",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^9.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "rollup": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
